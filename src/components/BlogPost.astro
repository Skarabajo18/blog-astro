---
const { title, details, url } = Astro.props;
---
<style>



    .text-title {
      color: aliceblue;
    }
    .card-button{
      color: rgb(39, 150, 247);
    }
    .card-details {
      display: flex;
      flex-wrap: wrap;
    }
  
    .card {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: #1f2937;
    }

    
</style>

<div class="card">
  <div class="card-details">
    <p class="text-title">{title}</p>
    <p class="text-body">{details}</p>
  </div>
  <a href={url} class="card-button">Leer aqu√≠</a>
</div>
